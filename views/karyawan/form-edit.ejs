<h1>Edit Karyawan</h1>

<form action="/karyawan/edit-process/<%= detail_karyawan[0].id%>" method="post">

<hr><hr>
<label>Nama Lengkap</label>
<input type="text" name="nama_lengkap" id="namaKaryawan" value="<%= detail_karyawan[0].nama %>">
<br><br>

<label>Alamat</label>
<textarea name="alamat" id="alamatKaryawan"><%= detail_karyawan[0].alamat %></textarea>
<br><br>

<label>Nomor Telepon</label>
<input type="text" name="no_telepon" id="noTeleponKaryawan" value="<%= detail_karyawan[0].no_telepon %>">
<br><br>

<label>Golongan Darah</label>
<select name="gol_darah" id="golDarahKaryawan">
    <option value="--pilih--">--pilih--</option>
    <option <%= (detail_karyawan[0].gol_darah == 'A') ? 'selected' : ''  %> value="A">A</option>
    <option <%= (detail_karyawan[0].gol_darah == 'B') ? 'selected' : ''  %> value="B">B</option>
    <option <%= (detail_karyawan[0].gol_darah == 'AB') ? 'selected' : ''  %> value="AB">AB</option>
    <option <%= (detail_karyawan[0].gol_darah == 'O') ? 'selected' : ''  %> value="O">O</option>
    <option <%= (detail_karyawan[0].gol_darah == '-') ? 'selected' : ''  %> value="-">Tidak Ada</option>
</select>
<br><br>

<label>Jenis Kelamin</label>
<select name="jenis_kelamin" id="jenisKelaminKaryawan">
    <option <%= (detail_karyawan[0].jenis_kelamin == 'L') ? 'selected' : ''  %> value="L">Laki-laki</option>
    <option <%= (detail_karyawan[0].jenis_kelamin == 'P') ? 'selected' : ''  %> value="P">Perempuan</option>
</select>
<br><br>
<button type="submit">Update</button>

</form>

<% if (info_error) { %> 

    <strong style="color: red;">
        <%= info_error.errno %> - <%= info_error.code %> <br>
        <%= info_error.sqlMessage %> <br>
    </strong>


<% } %>